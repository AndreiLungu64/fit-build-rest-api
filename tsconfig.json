{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "es6", "dom.iterable", "scripthost"],
    "module": "NodeNext",
    "rootDir": "./",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  },
  "include": ["./**/*.ts"]
}
